<?xml version="1.0" encoding="utf-8"?>
<widget id="elmurshid.com.stream" android-versionCode="10004" version="1.00.04" 
	xmlns="http://www.w3.org/ns/widgets" 
	xmlns:android="http://schemas.android.com/apk/res/android" 
	xmlns:gap="http://phonegap.com/ns/1.0">
	<name>
		Stream المرشد
	</name>
	<description>
		شبكة المرشد
	</description>
	<author href="http://www.itworkco.com" email="dev@itworkco.com">
		itworkco.com Developer Team
	</author>
	<preference name="Hostname" value="elmurshid" />
	<preference name="phonegap-version" value="cli-8.1.1" />
	<!-- <preference name="pgb-builder-version" value="1" /> -->
	<content src="index.html" />
	<preference name="StatusBarOverlaysWebView" value="false" />

	<platform name="ios">
		<preference name="MediaPlaybackRequiresUserAction" value="true" />
		<preference name="AllowInlineMediaPlayback" value="true" />

		<preference name="prerendered-icon" value="true" />
		<preference name="stay-in-webview" value="false" />
		<preference name="detect-data-types" value="true" />
		<preference name="exit-on-suspend" value="false" />
		<preference name="iosPersistentFileLocation" value="Compatibility" />
		<preference name="DisallowOverscroll" value="true" />
		<!-- <preference name="ScrollEnabled" value="true" /> -->



		<config-file parent="NSPhotoLibraryUsageDescription" platform="ios" target="*-Info.plist">
			<string>Attach your Images and share it.</string>
		</config-file>
		<config-file parent="NSCameraUsageDescription" platform="ios" target="*-Info.plist">
			<string>Tack  a Image and share it.</string>
		</config-file>
		<config-file parent="NSLocationWhenInUseUsageDescription" platform="ios" target="*-Info.plist">
			<string>Need location access to find things nearby , and compass </string>
		</config-file>
		<config-file parent="NSPhotoLibraryAddUsageDescription" platform="ios" target="*-Info.plist">
			<string>Tack  a Image and share it.</string>
		</config-file>
		<edit-config file="*-Info.plist" mode="merge" target="UIStatusBarHidden">
			<true />
		</edit-config>
		<edit-config file="*-Info.plist" mode="merge" target="UIViewControllerBasedStatusBarAppearance">
			<false />
		</edit-config>

		<feature name="SocialSharing">
			<param name="ios-package" value="SocialSharing" />
		</feature>
		<feature name="StatusBar">
			<param name="ios-package" onload="true" value="CDVStatusBar" />
		</feature>

	</platform>
	<platform name="android">
		<!-- <preference name="AndroidLaunchMode" value="singleTask" /> -->
		<preference name="android-minSdkVersion" value="23" />
		<preference name="android-targetSdkVersion" value="28" />
		<preference name="android-build-tool" value="gradle" />
		<preference name="android-installLocation" value="auto" />
		<preference name="AndroidPersistentFileLocation" value="Compatibility" />

		<feature name="SocialSharing">
			<param name="android-package" value="nl.xservices.plugins.SocialSharing" />
		</feature>

		<edit-config file="AndroidManifest.xml" target="/manifest/application/activity[@android:label='@string/activity_name']" mode="merge">
			<activity android:theme="@android:style/Theme.Translucent.NoTitleBar.Fullscreen"></activity>
			<!-- 
				https://github.com/phonegap/build/issues/618#issuecomment-371703756 
			-->
		</edit-config>


		<config-file target="AndroidManifest.xml" parent="/manifest">
			<uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
			<uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
			<uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
		</config-file>


	</platform>
